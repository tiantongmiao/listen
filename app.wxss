/**app.wxss**/
@import 'iconfont/iconfont.wxss';
.container{
  padding: 20px;
  box-sizing: border-box;
  color: #333;
  height: 100vh;
  padding-bottom: 50px;
}
.clearfix:after {
  content: '';
  height: 0;
  line-height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.p10{
  padding: 10px;
}
.pr10{
  padding-right: 10px
}
.pr20{
  padding-right: 20px
}
.pb20{
  padding-bottom: 20px
}
.mt50{
  margin-top: 50px;
}
.mb10{
  margin-bottom: 10px;
}
.card{
  padding-bottom: 10px;
  font-size: 14px;
  color: #333;
}
.card .userImg{
  width: 50px;
  height: 50px;
  border-radius: 5px;
}
.text-left{
  text-align: left;
}
.text-right{
  text-align: right;
}
.text-center{
  text-align: center;
}
.display-block{
  display: block;
}
.display-none{
  display: none;
}
.flex-row{
  display: flex;
  flex-direction: row;
}
.flex-column{
  display: flex;
  flex-direction: column;
}
.flex-1{
  flex: 1
}
.edit-view-textarea{
  font-size: 14px;
  width: 100%;
  padding: 5px 10px;
  text-align: left;
  box-sizing: border-box;
}
.message-view-text{
  font-size: 14px;
  color: #999;
}
.font-size-20{
  font-size: 20px;
}
.block-btn{
  margin: 0!important;
  width: 100%!important;
}
.break-all{
  word-break: break-all;
}
.nomore{
  color: #ccc;
  font-size: 12px;
}
.loadmore{
  color: #07c160;
}